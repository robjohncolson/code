{
  "name": "apstats-consensus-quiz",
  "version": "1.0.0",
  "description": "AP Statistics Consensus Quiz - Frontend application",
  "type": "module",
  "scripts": {
    "test:frontend": "playwright test --config=test/playwright.config.js",
    "test:frontend:headed": "playwright test --config=test/playwright.config.js --headed",
    "test:frontend:coverage": "c8 playwright test --config=test/playwright.config.js",
    "test:backend": "cd railway-server && npm test",
    "test:backend:coverage": "cd railway-server && npm run test:coverage",
    "test:all": "npm run test:frontend && npm run test:backend",
    "test:ci": "npm run test:all",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:backend": "cd railway-server && npm run lint",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "validate": "npm run format:check && npm run lint",
    "prepare": "command -v husky >/dev/null && husky install || true",
    "serve": "python3 -m http.server 8000",
    "serve:alt": "npx http-server -p 8000"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "c8": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-security": "^2.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
